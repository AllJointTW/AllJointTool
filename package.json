{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "format": "prettier '**/*.{js,json,ts,vue,md,yaml}' !**/dist/** !./dist/** --write --no-semi --single-quote && yarn lint --fix",
    "lint": "eslint '{**/*.{js,ts,vue},**/.eslintrc.js}'",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "lerna": "^3.20.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  }
}
