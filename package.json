{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "format": "prettier '**/*.{js,json,ts,vue,md,yaml}' !**/dist/** !./dist/** --write --no-semi --single-quote && yarn lint --fix",
    "lint": "eslint '{**/*.{js,ts,vue},**/.eslintrc.js}'",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "eslint": "^6.8.0",
    "husky": "^7.0.4",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
