{
  "compilerOptions": {
    "outDir": "../../../dist",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": true,
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "exclude": ["../../../node_modules", "../../../dist", "../../../public"]
}
